<UserControl x:Class="JigsawPuzzleSolver.Plugins.Controls.PluginConfigurator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JigsawPuzzleSolver.Plugins.Controls"
             xmlns:MetroControls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:plug="clr-namespace:JigsawPuzzleSolver.Plugins"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView ItemsSource="{Binding Source={x:Static plug:PluginFactory.AvailablePlugins}}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <DockPanel LastChildFill="False">
                        <TextBlock DockPanel.Dock="Left" Text="{Binding Name}"/>
                        <MetroControls:ToggleSwitch DockPanel.Dock="Right" OnLabel="Enabled" OffLabel="Disabled" VerticalAlignment="Center" Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}" IsChecked="{Binding IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </DockPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
