<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JigsawPuzzleSolver"
        xmlns:LogBox="clr-namespace:LogBox"
        xmlns:guiElements="clr-namespace:JigsawPuzzleSolver.GUI_Elements"
        x:Class="JigsawPuzzleSolver.MainWindow"
        mc:Ignorable="d"
        Title="Puzzle Solver" Height="900" Width="1200"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Icon="Resources/PuzzlePiece.png" Closing="Window_Closing">

    <Window.Resources>
        <LogBox:BitmapToImageSourceConverter x:Key="BitmapConverter"/>
        <local:NegateBooleanConverter x:Key="BooleanInverter"/>
        <local:PuzzleSavingStateToIconConverter x:Key="SavingStateConverter"/>

        <!-- Style to gray out disabled images -->
        <Style TargetType="{x:Type Image}">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.25"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <ToolBar Grid.Row="0">
            <Button Command="{Binding OpenNewPuzzleCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Height="16" Source="Resources/NewFile_16x.png"/>
                    <TextBlock Text="Open new Puzzle" Margin="5,0,0,0"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button Command="{Binding SavePuzzleCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Height="16" Source="Resources/Save_16x.png"/>
                    <TextBlock Text="Save Puzzle" Margin="5,0,0,0"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button Command="{Binding LoadPuzzleCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Height="16" Source="Resources/OpenFolder_16x.png"/>
                    <TextBlock Text="Load Puzzle" Margin="5,0,0,0"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button Command="{Binding InfoCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Height="16" Source="Resources/Info.png"/>
                    <TextBlock Text="About" Margin="5,0,0,0"/>
                </StackPanel>
            </Button>
        </ToolBar>

        <TabControl Grid.Row="1">
            <TabItem Header="Solver Progress">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="120" Margin="10,10,0,0" Command="{Binding StartSolvingCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Height="20" Source="Resources/Run_16x.png"/>
                                    <TextBlock Text="Start Solving" Margin="5,0,0,0"/>
                                </StackPanel>
                            </Button>
                            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="120" Margin="10,10,0,0" Command="{Binding StopSolvingCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Height="20" Source="Resources/Stop_16x.png"/>
                                    <TextBlock Text="Stop Solving" Margin="5,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Overall progress: " VerticalAlignment="Center"/>
                            <ProgressBar Grid.Row="0" Grid.Column="1" Margin="2" Value="{Binding PuzzleHandle.PercentageOfFinishedSolverSteps, Mode=OneWay}"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} / {1} steps finished">
                                        <Binding Path="PuzzleHandle.NumberOfFinishedSolverSteps" Mode="OneWay" />
                                        <Binding Path="PuzzleHandle.NumberOfSolverSteps" Mode="OneWay" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Current solver state: " VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding PuzzleHandle.CurrentSolverState, Mode=OneWay}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Current state progress: " VerticalAlignment="Center"/>
                            <ProgressBar Grid.Row="2" Grid.Column="1" Margin="2" Value="{Binding PuzzleHandle.CurrentSolverStepPercentageFinished, Mode=OneWay}"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding PuzzleHandle.CurrentSolverStepPercentageFinished, StringFormat='{}{0} %', Mode=OneWay}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Elapsed time: " VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding StopWatchSolver.Elapsed, StringFormat='hh\\:mm\\:ss\\.ff', Mode=OneWay}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Number pieces found: " VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding PuzzleHandle.NumberPuzzlePieces, Mode=OneWay}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Puzzle pieces folder: " VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding PuzzleHandle.PuzzlePiecesFolderPath}" VerticalAlignment="Center"/>

                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Piece Viewer">
                <guiElements:PieceViewer Margin="10" PieceList="{Binding PuzzleHandle.Pieces, Mode=OneWay}"/>
            </TabItem>

            <TabItem Header="Solver Result">
                <DockPanel Margin="10">
                    <ComboBox DockPanel.Dock="Top" SelectedValuePath="Key" DisplayMemberPath="Key" ItemsSource="{Binding PuzzleHandle.PuzzleSolutionImages}" SelectedValue="{Binding PuzzleHandle.SelectedSolutionImageKey}"/>
                    <LogBox:ZoomBorder DockPanel.Dock="Top" BorderBrush="#FFB2B2B2" BorderThickness="1" ClipToBounds="True" Margin="0,10,0,0">
                        <Image Source="{Binding PuzzleHandle.SelectedSolutionImage, Converter={StaticResource BitmapConverter}}"/>
                    </LogBox:ZoomBorder>
                </DockPanel>
            </TabItem>

        </TabControl>

        <GridSplitter ResizeDirection="Rows" Grid.Row="2" Height="5" Margin="0,5,0,5" ShowsPreview="False" HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="#FFB2B2B2" />

        <LogBox:LogBoxControl x:Name="logBox1" Margin="5,15,5,5" Grid.Row="2"/>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" Height="16" VerticalAlignment="Center" Source="{Binding PuzzleSavingState, Converter={StaticResource SavingStateConverter}}" ToolTip="{Binding PuzzleSavingState}"/>
            <TextBlock Grid.Column="1" Text="{Binding PuzzleHandle.PuzzleXMLOutputPath}" VerticalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding PuzzleSavingState}" Value="NEW_UNSAVED">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <TextBlock Grid.Column="2" Text="{Binding PuzzleHandle.CurrentSolverState}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10"/>
        </Grid>
    </Grid>
</Window>
