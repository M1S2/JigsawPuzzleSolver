<MetroControls:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JigsawPuzzleSolver"
        xmlns:LogBox="clr-namespace:LogBox;assembly=LogBox"
        xmlns:ImgGallery="clr-namespace:ImageGallery;assembly=ImageGallery"
        xmlns:guiElements="clr-namespace:JigsawPuzzleSolver.GUI_Elements"
        xmlns:converters="clr-namespace:JigsawPuzzleSolver.GUI_Elements.Converters"
        xmlns:MetroControls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:windowTheme="clr-namespace:JigsawPuzzleSolver.WindowTheme"
        x:Class="JigsawPuzzleSolver.MainWindow"
        mc:Ignorable="d"
        Title="Puzzle Solver" Height="900" Width="1200"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <MetroControls:MetroWindow.Resources>
        <converters:PuzzleSavingStateToIconConverter x:Key="SavingStateConverter"/>
        <converters:DivisionConverter x:Key="DivConverter"/>
        <converters:PuzzleStateToProgressBarStateConverter x:Key="ProgressBarStateConverter"/>
        <converters:IconPackToGeometryDrawingConverter x:Key="IconPackGeometryDrawingConverter"/>
    </MetroControls:MetroWindow.Resources>

    <!-- !!!!!!!!!!!!!!!!!!!!! use: https://social.msdn.microsoft.com/Forums/vstudio/en-US/bb7e2ae5-2046-4fb7-a27d-119197be8683/wpf-and-icons-best-practices?forum=wpf -->
    <MetroControls:MetroWindow.Icon>
        <DrawingImage Drawing="{Binding Source={x:Static iconPacks:PackIconModernKind.PuzzleRound}, Converter={StaticResource IconPackGeometryDrawingConverter}}"/>
    </MetroControls:MetroWindow.Icon>
    
    <!--<MetroControls:MetroWindow.IconTemplate>
        <DataTemplate>
            <iconPacks:PackIconMaterial Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Margin="2" Padding="4" Foreground="{DynamicResource IdealForegroundColorBrush}" Kind="Puzzle" />
        </DataTemplate>
    </MetroControls:MetroWindow.IconTemplate>-->

    <MetroControls:MetroWindow.LeftWindowCommands>
        <MetroControls:WindowCommands>
            <Separator/>
            <Button Command="{Binding OpenNewPuzzleCommand}">
                <iconPacks:PackIconModern Width="22" Height="22" Kind="PageAdd" ToolTip="Open new Puzzle" />
            </Button>
            <Button Command="{Binding LoadPuzzleCommand}">
                <iconPacks:PackIconModern Width="22" Height="22" Kind="FolderOpen" ToolTip="Load Puzzle" />
            </Button>
            <Button Command="{Binding SavePuzzleCommand}">
                <iconPacks:PackIconModern Width="22" Height="22" Kind="Save" ToolTip="Save Puzzle" />
            </Button>
        </MetroControls:WindowCommands>
    </MetroControls:MetroWindow.LeftWindowCommands>
    
    <MetroControls:MetroWindow.RightWindowCommands>
        <MetroControls:WindowCommands>
            <windowTheme:WindowThemeUserControl/>

            <Button Command="{Binding InfoCommand}" ToolTip="About this application">
                <iconPacks:PackIconModern Width="22" Height="22" Kind="InformationCircle" />
            </Button>
        </MetroControls:WindowCommands>
    </MetroControls:MetroWindow.RightWindowCommands>
    
    <!--see: https://entwickler.de/online/windowsdeveloper/wpf-status-taskbar-579796650.html-->
    <MetroControls:MetroWindow.TaskbarItemInfo>
        <TaskbarItemInfo ProgressState="{Binding PuzzleHandle.CurrentSolverState, Converter={StaticResource ProgressBarStateConverter}}" ProgressValue="{Binding PuzzleHandle.CurrentSolverStepPercentageFinished, Converter={StaticResource DivConverter}, ConverterParameter=100}" />
    </MetroControls:MetroWindow.TaskbarItemInfo>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <MetroControls:MetroAnimatedTabControl Grid.Row="0" MetroControls:TabControlHelper.Underlined="SelectedTabItem">
            <TabItem Header="Solver Progress">
                <guiElements:SolverControl PuzzleHandle="{Binding PuzzleHandle, Mode=OneWay}" PuzzleSavingState="{Binding PuzzleSavingState, Mode=OneWay}" ScrollLogEntries="{Binding AutoScrollToLastLogEntry, ElementName=logBox1, Mode=TwoWay}"/>
            </TabItem>

            <TabItem Header="Input Image Viewer">
                <ImgGallery:ImageGalleryControl Margin="10" NextAtEndBeginsNew="True" ImgList="{Binding PuzzleHandle.InputImages, Mode=OneWay}"/>
            </TabItem>

            <TabItem Header="Piece Viewer">
                <guiElements:PieceViewer Margin="10" PieceList="{Binding PuzzleHandle.Pieces, Mode=OneWay}"/>
            </TabItem>

            <TabItem Header="Solver Result">
                <ImgGallery:ImageGalleryControl Margin="10" NextAtEndBeginsNew="True" ImgList="{Binding PuzzleHandle.PuzzleSolutionImages, Mode=OneWay}"/>
            </TabItem>

            <TabItem Header="Join Pieces">
                <guiElements:PieceJoinerControl Margin="10" PuzzleHandle="{Binding PuzzleHandle, Mode=OneWay}"/>
            </TabItem>
        </MetroControls:MetroAnimatedTabControl>

        <GridSplitter ResizeDirection="Rows" Grid.Row="1" Height="5" Margin="0,5,0,5" ShowsPreview="False" HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="#FFB2B2B2"/>

        <LogBox:LogBoxControl Grid.Row="1" x:Name="logBox1" Margin="5,15,5,5"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" Height="16" VerticalAlignment="Center" Source="{Binding PuzzleSavingState, Converter={StaticResource SavingStateConverter}}" ToolTip="{Binding PuzzleSavingState}"/>
            <TextBlock Grid.Column="1" Text="{Binding PuzzleHandle.PuzzleXMLOutputPath}" VerticalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding PuzzleSavingState}" Value="NEW_UNSAVED">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <TextBlock Grid.Column="2" Text="{Binding PuzzleHandle.CurrentSolverState}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10"/>
        </Grid>
    </Grid>
</MetroControls:MetroWindow>
